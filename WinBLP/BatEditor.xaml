<Window x:Class="WinBLP.BatEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:debug="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        xmlns:local="clr-namespace:WinBLP"
        mc:Ignorable="d"
        Title="BatEditor" Height="600" Width="1000">
    <Window.Resources>
        
    </Window.Resources>
    <!--  Source="C:\Users\jhalls\AppData\Roaming\Echolocation\WinBLP\EditableBatReferenceXMLFile.Xml"  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="376*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="489*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <Grid.DataContext>
            <XmlDataProvider
                x:Name="batData"
                
            
                XPath="/BatLibrary/Bat"
                IsAsynchronous="False"
                IsInitialLoadEnabled="True"
                debug:PresentationTraceSources.TraceLevel="High"/>
        </Grid.DataContext>
        <GridSplitter
            x:Name="gridSplitter"
            Grid.Column="1"
            Grid.RowSpan="3"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            />

        

        <StackPanel
            x:Name="ButtonPanel"
            Grid.Row="2"
            Grid.Column="2"
            Orientation="Horizontal" HorizontalAlignment="Right"
            >

            <Button
                x:Name="MoveUpRecordButton"
                Width="70"
                Height="20"
                Content="UP"
                Margin="5,0,10,0" HorizontalAlignment="Left" Click="MoveUpRecordButton_Click"/>
            <Button
                x:Name="MoveDownRecordButton"
                Width="70"
                Height="20"
                Content="DOWN"
                Margin="5,0,100,0" HorizontalAlignment="Left" Click="MoveDownRecordButton_Click"/>

            <Button
                x:Name="AddRecordButton"
                Width="70"
                Height="20"
                Content="ADD"
                Margin="5,0,10,0" HorizontalAlignment="Right" Click="AddRecordButton_Click"/>
            <Button
                x:Name="DelRecordButton"
                Width="70"
                Height="20"
                Content="DEL"
                Margin="5,0,100,0" HorizontalAlignment="Right" Click="DelRecordButton_Click"/>
            
            <Button
                x:Name="OKButton"
                Width="70"
                Height="20"
                Content="OK"
                Margin="5,0,5,0" HorizontalAlignment="Right" Click="OKButton_Click"
                />
            <Button
                x:Name="CancelButton"
                Width="70"
                Height="20"
                Content="CANCEL"
                Margin="5,0,5,0" HorizontalAlignment="Right" IsCancel="True"
                />
            
        </StackPanel>

        <DockPanel Grid.Column="0" Grid.Row="1">
            <TextBox x:Name="BatNameTagListBox" DockPanel.Dock="Top" />
            <ListBox x:Name="BatNameListBox" ItemsSource="{Binding }" SelectionChanged="BatNameListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding XPath=@Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>

        <GroupBox
            x:Name="BatEditorGroupBox"
            Grid.Column="2"
            Grid.Row="1"
            Header="Bat Details">
            <GroupBox.DataContext>
                <Binding ElementName="BatNameListBox" Path="SelectedItem"/>
            </GroupBox.DataContext>
            <StackPanel
                Orientation="Vertical"
                x:Name="BatDetailsStackPanel"
                >
                <WrapPanel
                    x:Name="BatDetailsWrapPanel"
                    >
                    <Label Height="23">Common Name</Label>
                    <Label Height="23" FontWeight="Bold" MinWidth="20"/>
                    <Label Height="23" x:Name="PrefferredCommonNameLabel" FontWeight="Bold"
                           Content="{Binding XPath=BatCommonName}"/>

                </WrapPanel>
                <StackPanel Orientation="Horizontal" Background="SteelBlue" >
                    <TextBlock
                        FontSize="12"
                        FontWeight="Bold"
                        Background="SteelBlue"
                        Foreground="White"
                        Padding="10,2,2,2">Common Names</TextBlock>
                    <Button
                        x:Name="CommonNameUpButton"
                        Width="40"
                        Height="20"
                        Foreground="White"
                        Background="Blue"
                        Margin="100,0,0,0"
                        Content="UP" Click="CommonNameUpButton_Click"/>
                    <Button
                        x:Name="CommonNameDownButton"
                        Width="40"
                        Height="20"
                        Foreground="White"
                        Background="Blue"
                        Margin="10,0,0,0"
                        Content="DOWN" Click="CommonNameDownButton_Click"/>
                    <Button
                        x:Name="CommonNameAddButton"
                        Width="40"
                        Height="20"
                        Foreground="White"
                        Background="Blue"
                        Margin="10,0,0,0"
                        Content="ADD" Click="CommonNameAddButton_Click"/>
                    <Button
                        x:Name="CommonNameDelButton"
                        Width="40"
                        Height="20"
                        Foreground="White"
                        Background="Blue"
                        Margin="10,0,0,0"
                        Content="DEL" Click="CommonNameDelButton_Click"/>
                    <TextBox
                        x:Name="CommonNameEditBox"
                        Height="20"
                        Width="250"
                        Text=""
                        Margin="20,0,0,0" LostFocus="CommonNameEditBox_LostFocus"
                        />
                    
                </StackPanel>
                <ListView
                    x:Name="CommonNameListView"
                    Margin="10,10,10,20"
                    BorderThickness="0"
                    ItemsSource="{Binding XPath=BatCommonName}" SelectionChanged="CommonNameListView_SelectionChanged" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBlock MinWidth="50"
                                           Text="{Binding Path=InnerText}"/>
                            </WrapPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock
                    FontSize="12"
                    FontWeight="Bold"
                    Background="SteelBlue"
                    Foreground="White"
                    Padding="10,2,2,2">Genus</TextBlock>

                <TextBox
                    x:Name="GenusTextBlock"
                    TextWrapping="Wrap"
                    Margin="10,10,10,20"
                    Text="{Binding XPath=BatGenus,Mode=TwoWay}" LostFocus="GenusTextBlock_LostFocus"/>


                <TextBlock
                    FontSize="12"
                    FontWeight="Bold"
                    Background="SteelBlue"
                    Foreground="White"
                    Padding="10,2,2,2">Species</TextBlock>

                <TextBox
                    x:Name="SpeciesTextBlock"
                    TextWrapping="Wrap"
                    Margin="10,10,10,20"
                    Text="{Binding XPath=BatSpecies,Mode=TwoWay}" LostFocus="SpeciesTextBlock_LostFocus" />

                <StackPanel Orientation="Horizontal" Background="SteelBlue">
                
                <TextBlock
                    FontSize="12"
                    FontWeight="Bold"
                    Background="SteelBlue"
                    Foreground="White"
                    Padding="10,2,2,2">ID Tags</TextBlock>

                    <Button
                        x:Name="TagUpButton"
                        Width="40"
                        Height="20"
                        Foreground="White"
                        Background="Blue"
                        Margin="100,0,0,0"
                        Content="UP" Click="TagUpButton_Click"/>
                    <Button
                        x:Name="TagDownButton"
                        Width="40"
                        Height="20"
                        Foreground="White"
                        Background="Blue"
                        Margin="10,0,0,0"
                        Content="DOWN" Click="TagDownButton_Click"/>
                    <Button
                        x:Name="TagAddButton"
                        Width="40"
                        Height="20"
                        Foreground="White"
                        Background="Blue"
                        Margin="10,0,0,0"
                        Content="ADD" Click="TagAddButton_Click"/>
                    <Button
                        x:Name="TagDelButton"
                        Width="40"
                        Height="20"
                        Foreground="White"
                        Background="Blue"
                        Margin="10,0,0,0"
                        Content="DEL" Click="TagDelButton_Click"/>
                    <TextBox
                        x:Name="IDTagEditBox"
                        Height="20"
                        Width="250"
                        Margin="20,0,0,0"
                        Text="" LostFocus="IDTagEditBox_LostFocus" />
                </StackPanel>

                <ListView
                    x:Name="BatTagsListView"
                    Margin="10,10,10,20"
                    BorderThickness="0"
                    ItemsSource="{Binding XPath=BatTag}" SelectionChanged="BatTagsListView_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBlock MinWidth="50"
                                           Text="{Binding Path=InnerText}"/>
                            </WrapPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>

            </StackPanel>
        </GroupBox>
        
    </Grid>
</Window>
